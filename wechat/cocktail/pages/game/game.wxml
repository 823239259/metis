<view class="section-game">
  <view class="corner">
    <view class="{{item}}" wx:for="{{['fst','scd','thd','fth']}}"></view>
  </view>
  <view class="game-mn c-center">
    <view class="game-effect">
      <view class="effect-glass">
        <view class="effect-color" style="top: {{color.placeholder.cur[0]}}px;height: {{color.placeholder.cur[1]}}px;background: -webkit-gradient(linear,left bottom,left top,{{color.gradient}}"></view>
        <view class="glass glass{{item}}" wx:for="{{[1,2,3]}}" wx:if="{{curOption.glass == 'glass' + item}}"></view>
      </view>
      <view class="effect-fruit">
        <view class="fruit{{item}}" wx:for="{{[1,2,3,4,5,6]}}" style="bottom: {{fruit.fruitPosition[0]}}px;left: {{fruit.fruitPosition[1]}}px" wx:if="{{curOption.fruit == 'fruit' + item}}"></view>
      </view>
    </view>
    <view class="game-tab c-fix" bindtap="handleTab">
      <text data-tab="glass">Glass</text>
      <text data-tab="layer">Layer</text>
      <text data-tab="color">Liquor</text>
      <text data-tab="fruit">Fruit</text>    
    </view>
    <view class="game-option">
      <view class="option-lst option-glass c-fix" wx:if="{{curTab == 'glass'}}" bindtap="handleOption">
        <view class="glass{{item}}" wx:for="{{[1,2,3]}}"><icon class="c-center" data-option="glass{{item}}"></icon></view>
      </view>
      <view class="option-lst option-layer c-fix" wx:if="{{curTab == 'layer'}}" bindtap="handleOption">
        <view class="layer{{item}}" wx:for="{{[1,2,3,4,5,6]}}"><icon class="c-center" data-option="layer{{item}}"></icon></view>
      </view>
      <view class="option-lst option-color c-fix" wx:if="{{curTab == 'color'}}" bindtap="handleOption">
        <view class="color{{item}}" wx:for="{{[1,2,3,4,5,6]}}"><icon class="c-center" data-option="color{{item}}"></icon></view>
      </view>
      <view class="option-lst option-fruit c-fix" wx:if="{{curTab == 'fruit'}}" bindtap="handleOption">
        <view class="fruit{{item}}" wx:for="{{[1,2,3,4,5,6]}}"><icon class="c-center" data-option="fruit{{item}}"></icon></view>
      </view>
    </view>
  </view>
</view>