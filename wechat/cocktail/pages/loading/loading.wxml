<view class="section-loading">
  <view class="corner">
    <view class="fst"></view>
    <view class="scd"></view>
    <view class="thd"></view>
    <view class="fth"></view>
  </view>
  <view class="loading-percent c-center">
    <view class="glass"></view>
    <view class="cocktail" style="top: {{50 - loadingPercent * 22 / 100}}px" wx:if="{{loadingPercent > 5}}"></view>
    <text>{{loadingPercent}} %</text>
  </view>
</view>